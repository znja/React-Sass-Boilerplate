{
  "name": "react-es6-sass-boilerplate",
  "version": "1.0.0",
  "description": "A React, es6 and Sass boilerplate using webpack ",
  "main": "index.js",
  "scripts": {
    "start": "node server.js --env=dev",
    "serve": "node server.js --env=dev",
    "serve:dist": "node server.js --env=dist",
    "dist": "npm run copy & webpack --env=dist",
    "copy": "cp ./src/index.html ./dist",
    "clean": "rm -rf dist/*"
  },
  "keywords": [
    "react",
    "es6",
    "sass"
  ],
  "author": "Znja",
  "license": "ISC",
  "dependencies": {
    "babel-core": "^6.7.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-1": "^6.1.18",
    "normalize.css": "^4.0.0",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "devDependencies": {
    "css-loader": "^0.23.1",
    "file-loader": "^0.8.5",
    "minimist": "^1.2.0",
    "node-sass": "^3.4.2",
    "open": "0.0.5",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.0",
    "react-hot-loader": "^1.3.0"
  }
}
